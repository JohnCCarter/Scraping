[flake8]
max-line-length = 120
max-complexity = 15
ignore = 
    E501,
    W503,
    E722,
    F541,
    W291,
    W293,
    F401,
    F811,
    E203,
    W605,
    F403,
    F405,
    E731,
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .env,
    scraping_env,
    node_modules,
    .pytest_cache,
    .coverage,
    htmlcov,
    dist,
    build,
    *.egg-info,
    .mypy_cache,
    .ruff_cache
per-file-ignores =
    __init__.py:F401
    tests/*:E722
    */tests/*:E722
